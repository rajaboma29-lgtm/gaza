  <script>
document.querySelector("button").addEventListener("click", function(e) {
  e.preventDefault();

  const data = {
    name: document.querySelector("input[placeholder='أدخل اسمك الكامل']").value,
    id: document.querySelector("input[placeholder='أدخل رقم الهوية']").value,
    phone: document.querySelector("input[placeholder='أدخل رقم الجوال']").value,
    originalAddress: document.querySelector("input[placeholder='مكان السكن الأصلي']").value,
    currentAddress: document.querySelector("input[placeholder='مكان السكن الحالي']").value,
    houseType: document.querySelector("select").value,
    assistance: document.querySelector("textarea").value
  };

  fetch("https://script.google.com/macros/s/AKfycbwwB6aOcDIXKzNyfARot7hMwR-uyINipPKVkoX4cfxPBLJ0AwFPp_zqur4tsDB-vRRqjw/exec", {
    method: "POST",
    body: JSON.stringify(data),
    headers: { "Content-Type": "application/json" }
  })
  .then(res => res.json())
  .then(resp => alert("تم إرسال الطلب بنجاح!"))
  .catch(err => alert("حصل خطأ، حاول مرة أخرى."));
});
</script>

